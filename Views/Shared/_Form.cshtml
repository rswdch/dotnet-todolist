@model TodoViewModel

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div asp-validation-summary="All"></div>
    <label asp-for="Todo.Name"></label>
    <input asp-for="Todo.Id" type="hidden"></input>
    <input asp-for="Todo.Name"></input>
    <span asp-validation-for="Todo.Name"></span>
    <input type="submit" id="form-button" value="Add Todo" />
</form>